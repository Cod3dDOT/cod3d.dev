{
	"name": "cod3d.dev",
	"version": "0.1.2",
	"private": true,
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"!(*.js|*.ts|*.tsx|*.txt)": [
			"prettier --write"
		]
	},
	"scripts": {
		"dev": "next dev --turbo",
		"million": "MILLION=true bun run next dev ",
		"prebuild": "bun next telemetry disable",
		"build": "next build",
		"clean-build": "rm -rf .next && bun run build",
		"start": "next start",
		"lint": "next lint",
		"format": "prettier --check .",
		"format:fix": "prettier --write --list-different .",
		"analyze": "ANALYZE=true bun run build",
		"prepare": "husky",
		"generate:pokemons": "bun scripts/generate-pokemons.ts generate"
	},
	"dependencies": {
		"@million/lint": "^1.0.13",
		"@nauverse/react-aurora-background": "^1.0.12",
