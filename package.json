		"isomorphic-dompurify": "^2.18.0",
		"lenis": "^1.1.18",
		"next": "^15.0.4",
		"next-themes": "^0.4.4",
		"next-view-transitions": "^0.3.4",
		"pocketbase": "^0.22.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^9.0.1",
		"react-use": "^17.5.1",
		"rehype-highlight": "^7.0.1",
		"rehype-highlight-code-lines": "^1.0.4",
		"rehype-katex": "^7.0.1",
		"remark-frontmatter": "^5.0.0",
		"remark-heading-id": "github:imcuttle/remark-heading-id",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.1",
		"rss": "^1.2.2",
		"sharp": "^0.33.5",
		"use-scramble": "^2.2.15"
	},
	"devDependencies": {
		"eslint-config-next": "^15.0.4",
		"@eslint/compat": "^1.2.4",
