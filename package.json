		"@eslint/js": "^9.16.0",
		"@next/bundle-analyzer": "^15.0.4",
		"@next/eslint-plugin-next": "^15.0.4",
		"@pyncz/tailwind-mask-image": "^2.0.0",
		"@tailwindcss/typography": "^0.5.15",
