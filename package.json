{
	"name": "cod3d.dev",
	"version": "0.1.2",
	"private": true,
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"next lint --fix",
			"prettier --write"
		],
		"!(*.js|*.ts|*.tsx|*.txt)": [
			"prettier --write"
		]
	},
	"scripts": {
		"dev": "next dev",
		"prebuild": "bun next telemetry disable",
		"build": "next build",
		"clean-build": "rm -rf .next && bun run build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write --list-different .",
		"analyze": "ANALYZE=true bun run build",
		"prepare": "husky",
		"generate:pokemons": "bun scripts/generate-pokemons.ts generate"
	},
	"dependencies": {
		"@r4ai/remark-callout": "^0.6.2",
		"copy-to-clipboard": "^3.3.3",
		"geist": "^1.3.1",
		"isomorphic-dompurify": "^2.23.0",
		"lenis": "^1.2.3",
		"next": "^15.3.0",
		"next-themes": "^0.4.6",
		"pocketbase": "^0.25.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-markdown": "^10.1.0",
		"react-use": "^17.6.0",
		"sharp": "^0.34.1",
		"rss": "^1.2.2",
		"rehype-highlight": "^7.0.2",
		"rehype-highlight-code-lines": "^1.1.3",
		"rehype-katex": "^7.0.1",
		"rehype-stringify": "^10.0.1",
		"remark-frontmatter": "^5.0.0",
		"remark-heading-id": "github:imcuttle/remark-heading-id",
		"remark-math": "^6.0.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.24.0",
		"@ianvs/prettier-plugin-sort-imports": "4.4.1",
		"@next/bundle-analyzer": "^15.3.0",
		"@tailwindcss/postcss": "^4.1.3",
		"@tailwindcss/typography": "^0.5.16",
		"@types/react": "^19.1.0",
		"@types/node": "^22.14.1",
		"@types/react-dom": "^19.1.2",
		"@types/remark-heading-id": "^1.0.0",
		"@types/rss": "^0.0.32",
		"@typescript-eslint/eslint-plugin": "8.29.1",
		"@typescript-eslint/parser": "8.29.1",
		"clsx": "^2.1.1",
		"eslint": "9.24.0",
		"eslint-config-next": "^15.3.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "5.2.6",
		"eslint-plugin-tailwindcss": "^3.18.0",
		"extract-colors": "^4.2.0",
		"husky": "^9.1.7",
		"install": "^0.13.0",
		"lint-staged": "^15.5.0",
		"postcss": "^8.5.3",
		"prettier": "3.5.3",
		"prettier-plugin-sort-json": "4.1.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"schema-dts": "^1.1.5",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.29.1"
	}
}
