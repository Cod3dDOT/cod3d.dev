		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"autoprefixer": "^10.4.20",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
